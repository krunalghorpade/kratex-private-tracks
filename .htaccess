RewriteEngine On

# API Routing
RewriteRule ^api/tracks/([0-9]+)$ api/tracks.php?id=$1 [L,QSA]
RewriteRule ^api/tracks$ api/tracks.php [L,QSA]
RewriteRule ^api/upload$ api/upload.php [L,QSA]
RewriteRule ^api/stats$ api/stats.php [L,QSA]
RewriteRule ^api/meta$ api/meta.php [L,QSA]
RewriteRule ^api/mhouse$ api/mhouse.php [L,QSA]
RewriteRule ^api/banners$ api/banners.php [L,QSA]
RewriteRule ^api/youtube$ api/youtube.php [L,QSA]
RewriteRule ^api/settings$ api/settings.php [L,QSA]

# Prevent directory listing
Options -Indexes
